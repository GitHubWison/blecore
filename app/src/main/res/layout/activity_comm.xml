<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.zfs.common.view.ClearEditText
                android:id="@+id/etFilte"
                android:textSize="14dp"
                android:hint="过滤关键字"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <CheckBox
                android:id="@+id/chkPrint"
                android:checked="true"
                android:text="输出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="收到数据↓："
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <cn.zfs.common.view.RoundButton
                android:id="@+id/btnClear"
                android:text="清空"
                style="@style/RoundButtonStyle"
                app:rbCornerRadius="2dp"
                app:rbNormalTextColor="@color/colorPrimary"
                app:rbNormalStrokeColor="@color/colorPrimary"
                app:rbNormalFillColor="@color/transparent"
                app:rbPressedTextColor="@color/white"
                app:rbPressedFillColor="@color/colorPrimary"
                android:layout_height="30dp"
                android:layout_width="wrap_content"/>
            <cn.zfs.common.view.RoundButton
                android:id="@+id/btnStart"
                android:text="开始"
                style="@style/RoundButtonStyle"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                app:rbCornerRadius="2dp"
                app:rbNormalTextColor="@color/colorPrimary"
                app:rbNormalStrokeColor="@color/colorPrimary"
                app:rbNormalFillColor="@color/transparent"
                app:rbPressedTextColor="@color/white"
                app:rbPressedFillColor="@color/colorPrimary"
                android:layout_height="30dp"/>
            <cn.zfs.common.view.RoundButton
                android:id="@+id/btnPause"
                android:text="暂停"
                style="@style/RoundButtonStyle"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                app:rbCornerRadius="2dp"
                app:rbNormalTextColor="@color/colorPrimary"
                app:rbNormalStrokeColor="@color/colorPrimary"
                app:rbNormalFillColor="@color/transparent"
                app:rbPressedTextColor="@color/white"
                app:rbPressedFillColor="@color/colorPrimary"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvLogs"
            android:textColor="#0BBF43"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.zfs.common.view.ClearEditText
            android:id="@+id/etValue"
            android:digits="1234567890abcdefABCDEF "
            android:hint="输入示例：a5 5a 12 34 56 78"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/ivRec"
            android:scaleType="centerCrop"
            android:src="@drawable/drop"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <cn.zfs.common.view.RoundButton
            android:id="@+id/btnSend"
            android:text="发送"
            style="@style/RoundButtonStyle"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            app:rbCornerRadius="2dp"
            app:rbNormalTextColor="@color/colorPrimary"
            app:rbNormalStrokeColor="@color/colorPrimary"
            app:rbNormalFillColor="@color/transparent"
            app:rbPressedTextColor="@color/white"
            app:rbPressedFillColor="@color/colorPrimary"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/chk"
            android:textSize="14dp"
            android:text="循环"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDelay"
            android:inputType="number"
            android:hint="延时ms"
            android:layout_marginStart="6dp"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <cn.zfs.common.view.RoundButton
            android:layout_marginStart="8dp"
            android:id="@+id/btnClearCount"
            android:text="清零"
            style="@style/RoundButtonStyle"
            android:layout_width="wrap_content"
            app:rbCornerRadius="2dp"
            app:rbNormalTextColor="@color/colorPrimary"
            app:rbNormalStrokeColor="@color/colorPrimary"
            app:rbNormalFillColor="@color/transparent"
            app:rbPressedTextColor="@color/white"
            app:rbPressedFillColor="@color/colorPrimary"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvSuccessCount"
            android:text="成功:0"
            android:textColor="#008c00"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvFailCount"
            android:text="失败:0"
            android:textColor="#cc0000"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>